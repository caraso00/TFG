<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#228B22">

    <TextView
        android:id="@+id/registerText"
        android:layout_width="374dp"
        android:layout_height="76dp"
        android:layout_marginTop="50dp"
        android:text="Añadir contenedor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/selectLocationButton"
        android:layout_width="154dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:text="Seleccionar Ubicación"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerText" />

    <TextView
        android:id="@+id/tipoSpinnerTitle"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:text="Tipo de contenedor:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectLocationButton" />

    <Spinner
        android:id="@+id/tipoSpinner"
        android:layout_width="172dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:entries="@array/type_options"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipoSpinnerTitle" />

    <TextView
        android:id="@+id/estadoSpinnerTitle"
        android:layout_width="219dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:text="Estado del contenedor:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tipoSpinner" />

    <Spinner
        android:id="@+id/estadoSpinner"
        android:layout_width="172dp"
        android:layout_height="53dp"
        android:layout_marginTop="5dp"
        android:entries="@array/status_options"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estadoSpinnerTitle" />

    <!-- Campo para agregar fotos (puede ser un Button o un ImageView) -->

    <!-- Botones de Aceptar y Cancelar -->
    <ImageView
        android:id="@+id/imageViewer"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/description_add_photo"
        android:src="@drawable/add_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estadoSpinner"
        android:clickable="true"
        android:focusable="true"/>

    <Button
        android:id="@+id/aceptarButton"
        android:layout_width="141dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:text="Aceptar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cancelarButton"
        app:layout_constraintTop_toBottomOf="@+id/imageViewer" />

    <Button
        android:id="@+id/cancelarButton"
        android:layout_width="141dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:text="Cancelar"
        app:layout_constraintLeft_toRightOf="@id/aceptarButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewer" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>