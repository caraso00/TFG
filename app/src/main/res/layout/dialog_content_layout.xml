<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEB3B"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="¿Quiere crear un aviso?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tituloEditText"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_backgroud_yellow"
        android:hint="Título"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#514F4F" />

    <EditText
        android:id="@+id/descripcionEditText"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_backgroud_yellow"
        android:hint="Breve descripción"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#514F4F" />

    <LinearLayout
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/acceptTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Si"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="No"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>
